doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle} 
        link(rel="stylesheet", href="shopstyle.css")
    body
        header
            nav.navbar
                ul 
                    li
                        a(href="/home", class=(path==='/home' ? 'active' : '')) home
                    li
                        a(href="/", class =(path==='/' ? 'active' : '')) shop
                    li
                        a(href="/cart", class =(path==='/cart' ? 'active' : '')) cart
                    
                    if isLoggedIn
                        li
                            a(href="/admin/add-product", class=(path==='/admin/add-products' ? 'active' : '')) add product
                        li
                            a(href="/admin/admin-product-view", class=(path==='/admin/admin-product-view' ? 'active' : '')) product management
                        li
                            form(action = "/logout" method="POST")
                                button(type = "submit") logout
                    else
                        li
                            form(action = "/login" method="GET")
                                button(href="/login" type="submit") login
        block content